
<div class = "card" id="<%= dom_id group %>">
<div class = "card-body">
  <p class = "card-text" >
    <strong>Creator:</strong>
    <%= User.find(group.creator_id).username %>
  </p>

  <p class = "card-text">
    <strong>Mission statement:</strong>
    <%= group.mission_statement %>
  </p>

  <p class = "card-text">
    <strong>Title:</strong>
    <%= group.title %>
  </p>

  <p class = "card-text">
    <strong>Private:</strong>
    <%= group.private %>
  </p>

  <p class = "card">
    <strong > <div class = "card-title"> Users in group: </div> </strong>
    <ul>
      <% UserInGroup.where(:group_id => group.id).all.each do |user_in_group|%>
      <% user = User.where(:id => user_in_group.user_id).first %>
        <li class = "card-text"> <%= user.email  %>  </li>
        <%= link_to "Show this user", user %>
      <%end%>
    </ul>
  </p>

    <strong> Tasks in Group: </strong>
    <% Task.where(:group_id => group.id).all.each do |task|%>
  <p class = "card">
      <strong>
       <div class = "card-title"> Task Name: <%= task.name%> </div>
      </strong>
      <ul class = "card-body" >
        <li class = "card-text">
        <% user = User.find(task.leader_id)%>
          leader name: <%= user.username%>
          
        </li>

        <li class = "card-text">
          description: <p> <%= task.description%> </p>
        </li>

      </ul>
      <%= link_to "Link to task", task %>
  </p>
    <% end %>
</div>
</div>
